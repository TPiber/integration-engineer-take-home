{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["types/*.d.ts", "src/*"],
      "@/*": ["src/*"]
    }
  }
}
